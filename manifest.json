{
  "name": "Remove Vanity Statistics",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Hide Social Media Statistics for Twitter",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_title": "Remove Vanity Statistics",
    "default_popup": "popups/popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "scripts/twitter.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
